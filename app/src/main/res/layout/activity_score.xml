<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xml:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="50dp"
    android:background="@drawable/backgroundquizz"
    tools:ignore="MissingDefaultResource"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView

        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Your Score Is : "
        android:textSize="33dp"
        android:textColor="@color/purple"
        android:layout_marginTop="40dp"/>

    <com.github.lzyzsd.circleprogress.DonutProgress

        android:id="@+id/donut_progress"
        app:donut_finished_color="@color/purple"
        app:donut_text_color="@color/purple"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:background="@drawable/button"
            android:layout_marginHorizontal="35dp"
            android:textColor="@color/white"
            android:text="Retry" />
        <Button
            android:id="@+id/btn_home"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:background="@drawable/button"
            android:text="Home"
            android:layout_marginBottom="35dp"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>